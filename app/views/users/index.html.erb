<div class="container">
  <h1>Users</h1>
  <p>All our users so happy!</p>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Gender</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= user.gender %></td>
        <td>
          <%= link_to "Show", user_path(user), class: "btn-outline-info" %>
        </td>
        <td>
          <%= link_to "Edit", edit_user_path(user), class: "btn-outline-success" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
